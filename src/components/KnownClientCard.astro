---
import { Image } from "astro:assets";
import Client from "../assets/images/client.png";

const { name, role, record } = Astro.props;
---

<div class="relative">
  <Image src={Client} alt="" class="" />
  <article class="absolute bottom-0 left-0 pb-8 pl-8 lg:pb-12 lg:pl-12">
    <p class="mb-2 text-3xl text-white lg:text-5xl" set:html={name} />
    <p
      class="mb-2 inline-block rounded-3xl bg-yellow-300 px-8 text-base lg:text-xl"
    >
      {record}
    </p>
    <p class="text-xl text-white lg:text-2xl">{role}</p>
  </article>
</div>
