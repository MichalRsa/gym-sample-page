---
import { Image } from "astro:assets";
import Client from "../assets/images/client.png";

const { name, role, record } = Astro.props;
---

<div class="max-h-[620px] max-w-[410] overflow-hidden rounded-3xl">
  <Image
    src={Client}
    alt=""
    class="relative -z-10 min-h-full min-w-full object-cover"
  />
  <article class="-translate-y-full pb-16 pl-16">
    <p class="mb-2 text-5xl text-white" set:html={name} />
    <p class="mb-2 inline-block rounded-3xl bg-yellow-300 px-8 text-xl">
      {record}
    </p>
    <p class="text-2xl text-white">{role}</p>
  </article>
</div>
