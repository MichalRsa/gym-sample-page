---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  link: string;
  text: string;
  fontSize?: string;
  fontColor?: string;
  type?: "primary" | "secondary";
  img?: ImageMetadata;
}
const { link, text, type, fontSize, fontColor, img } = Astro.props;

const buttonTypes = {
  primary: "bg-yellow-300 text-black",
  secondary: "border border-yellow-300 backdrop-blur-md",
};

const buttonType = type ? buttonTypes[type] : buttonTypes.primary;

const styles = {
  type: buttonType,
  fontColor: fontColor || "text-black",
  fontSize: fontSize || "text-sm lg:text-base",
};
---

<a href={link} class="inline-block">
  <p
    class:list={[
      "flex items-center justify-center rounded-xl px-8 py-3  font-bold transition-all duration-300 hover:bg-yellow-500",
      ...Object.values(styles),
    ]}
  >
    {text}

    {
      img && (
        <span class="pl-2">
          <Image
            src={img}
            alt=""
            class={`px-0.5 ${styles.fontColor === "text-black" && "invert"}`}
          />
        </span>
      )
    }
  </p>
</a>
